{
    "name": "diego/user-post-management-api",
    "description": "Sistema básico de gestión de usuarios con autenticación y posts.",
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "^5.5",
        "psr/log": "^1.1",
        "monolog/monolog": "^2.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000 -t public"
    },
    "config": {
        "optimize-autoloader": true
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
